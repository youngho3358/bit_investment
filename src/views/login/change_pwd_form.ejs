<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>coin_investment</title>
    <script>
        function submit_change() {
            const changePassword = document.getElementById("input_password").value;
            if(changePassword === ""){
                alert("변경할 비밀번호를 입력해주세요.");
                document.getElementById("input_password").focus();
                return;
            }else{
                let data = {changePassword : changePassword};
                fetch("/login/change_pwd",{
                            method : "post",
                            headers : {"Content-Type":"application/json"},
                            body : JSON.stringify(data)
                        })
                        .then(res => res.json())
                        .then(result => {
                            if(result === 1){
                                alert("비밀번호가 변경되었습니다.");
                                location.href = "/";
                            }else{
                                alert("비밀번호 변경 실패!!!")
                            }
                        })
                return;
            }
        }
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        div{
            display: block;
        }
        a {
            text-decoration: none;
        }
        .wrap {
            min-width: 1340px;
            min-height: 1000px;
            background: #f1f1f3;
            padding-bottom: 20px;
        }
        .header {
            width: 1280px;
            height: 100px;
            margin: 0px auto 0px;
        }
        .container_1 {
            position: relative;
            height: 100px;
            width: 800px;
            margin: 10px auto 0px;
            text-align: center;
        }
        .top_login_register_box {
            display: inline-block;
            height: 20px;
            margin-top: 40px;
            margin-left: 910px;
            font-size: 17px;
            font-weight: bolder;
            text-align: right;
        }
        .top_login_button {
            font-size: 20px;
            margin-right: 40px;
            color: white;
        }
        .top_register_button {
            font-size: 20px;
            margin-right: 40px;
            color: white;
        }
        .top_logo {
            position: absolute;
            width: 150px;
            height: 70px;
            margin-left: 30px;
