        }
        .top_menu_link{
            display: inline-block;
            height: 26px;
            margin-top: 22px;
            font-size: 26px;
            font-weight: bold;
            color: white;
        }
        .myPage_box{
            position: relative;
            width: 800px;
            margin: 100px auto 20px;
            text-align: center;
        }
        .input_password{
            margin-top: 40px;
